{
  "name": "client-smart-digital",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build-dev": "ng lint && ng build -c dev",
    "build-pvt": "ng lint && ng build -c pvt",
    "build-sit": "ng lint && ng build -c sit",
    "build-prod": "ng lint && ng build -c production",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --runInBand --coverage --coverageDirectory=coverage/jest",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.1.0",
    "@angular/common": "6.1.0",
    "@angular/compiler": "6.1.0",
    "@angular/core": "6.1.0",
    "@angular/forms": "6.1.0",
    "@angular/http": "6.1.0",
    "@angular/platform-browser": "6.1.0",
    "@angular/platform-browser-dynamic": "6.1.0",
    "@angular/router": "6.1.0",
    "@types/qrcode": "^1.3.1",
    "core-js": "^2.5.4",
    "mychannel-shared-libs": "git+https://vca.ais.co.th/myChannel/mychannel-shared-libs.git#1.0.0",
    "qrcode": "^1.3.3",
    "rxjs": "6.2.2",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-builders/jest": "^7.3.1",
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular/cli": "~6.1.4",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "@types/jest": "23.3.3",
    "codelyzer": "~4.2.1",
    "husky": "^1.3.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "23.6.0",
    "jest-preset-angular": "6.0.2",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "transformIgnorePatterns": [],
    "testMatch": [
      "<rootDir>/src/app/buy-product/**/*.spec.ts",
      "<rootDir>/src/app/containers/**/*.spec.ts",
      "<rootDir>/src/app/dashboard/**/*.spec.ts",
      "<rootDir>/src/app/main-menu/**/*.spec.ts",
      "<rootDir>/src/app/device-only/**/*.spec.ts",
      "<rootDir>/src/app/order/**/*.spec.ts"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "coverageReporters": [
      "text",
      "cobertura",
      "html"
    ]
  }
}
